<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="account_multi_payment_wizard_form">
            <field name="name">account.multi.payment.wizard.form</field>
            <field name="model">account.multi.payment.wizard</field>
            <field name="arch" type="xml">
                <form string="Payment Wizard">
                  <header>
                   <!-- <button string="Discard" class="btn btn-secondary" special="cancel" /> -->
                        <button name="multi_partial_pay"  attrs="{'invisible' : [('procesado','=',True)]}" string=" Register Payment " type="object"
                            class="btn btn-primary" icon="fa-money" style="float: right;" />
                </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="partner_id" required="1" />
                            </group>
                            <group>
                                <field name="partner_type" readonly="1" />
                                <field name="payment_type" readonly="1" />
                                <field name="procesado" readonly="1" />
                            </group>
                        </group>
                        <group string="Payment">
                            <group>
                                <field name="move_line_id"
                                    context="{'partner_id' : partner_id, 'partner_type' : partner_type}"
                                    options="{'no_open': True, 'no_create': True}"
                                    attrs="{'readonly' : [('partner_id','=',False)],'required' : [('partner_id','!=',False)]}" force_save="1"/>
                                <field name="currency_id" />
                                <field name="manual_currency_rate_active" />
                                <field name="manual_currency_rate" />
                            </group>
                            <group>
                                <field name="company_id" readonly="1" invisible="1" />
                                <field name="company_currency_id" readonly="1" invisible="1" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="amount_residual" />
                                <field name="amount_residual_currency" attrs="{
                                    'invisible' : [('currency_id','=',False)]
                                    }" />
                            </group>
                            <group>
                                <field name="remain_amount" />
                                <field name="remain_amount_currency" attrs="{
                                    'invisible' : [('currency_id','=',False)]
                                    }" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Move Lines">
                                <field name="move_lines_ids" nolabel="1"
                                    context="{'default_partner_id': partner_id,'default_payment_curr_id' : currency_id}">
                                    <tree editable="bottom">
                                        <field name="move_id"
                                            context="{'partner_id' : parent.partner_id, 'type' : parent.payment_type}"
                                            required="1" options="{'no_open': True, 'no_create': True}" />
                                        <field name="partner_id" context="{'default_partner_id' : parent.partner_id}"
                                            invisible="1" />
                                        <field name="company_id" invisible="1" />
                                        <field name="company_currency_id" invisible="1" />
                                        <field name="move_line_id" invisible="1" />
                                        <field name="currency_id" />
                                        <field name="payment_curr_id" force_save="1" invisible="1" />
                                        <field name="is_comapany" invisible="1" />
                                        <field name="amount_total" invisible="1" />
                                        <field name="amount_residual" force_save="1" />
                                        <field name="amount_residual_currency" force_save="1" />
                                        <field name="amount_to_pay" attrs="{
                                        'readonly': [('is_comapany','!=',False)]}" force_save="1" />
                                        <field name="curr_amount_to_pay"
                                            attrs="{'readonly':[('is_comapany','=',False)]}" force_save="1" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <!-- <footer>
                        <button string="Discard" class="btn btn-secondary" special="cancel" />
                        <button name="multi_partial_pay" string=" Register Payment " type="object"
                            class="btn btn-primary" icon="fa-money" style="float: right;" />
                    </footer> -->
                </form>
            </field>
        </record>

        <record id="action_partial_account_payments" model="ir.actions.act_window">
            <field name="name">Partial Payments</field>
            <field name="res_model">account.multi.payment.wizard</field>
            <field name="view_mode">form</field>
            <field name="context">{
                'default_partner_type': 'customer',
                }</field>
        </record>
        <record id="view_payment_partial" model="ir.ui.view">
            <field name="name">Partial Payments</field>
            <field name="model">account.multi.payment.wizard</field>
            <field name="arch" type="xml">
                <tree string="Invoices">

                    <field name="name" decoration-bf="1" />
                    <field name="partner_id" decoration-bf="1" />
                    <field name="amount_residual" decoration-bf="1" />
                    <field name="remain_amount" decoration-bf="1" />
                </tree>
            </field>
        </record>
        <record id="action_partial_account_payments_payable" model="ir.actions.act_window">
            <field name="name">Partial Payments</field>
            <field name="res_model">account.multi.payment.wizard</field>
            <field name="view_mode">form</field>
            <field name="context">{
                'default_partner_type': 'supplier',
                }</field>
        </record>

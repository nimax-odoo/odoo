        <record id="action_partial_account_payments_tree" model="ir.actions.act_window">
            <field name="name">Pagos Parciales</field>
            <field name="res_model">account.multi.payment.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_payment_partial" />
            <field name="domain">[('partner_type','=','customer')]</field>
            <field name="context">{
                'default_partner_type': 'customer',
                }</field>
       
        </record>
        <record id="action_partial_account_payments_payable_tree" model="ir.actions.act_window">
            <field name="name">Pagos Parciales</field>
            <field name="res_model">account.multi.payment.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_payment_partial" />
            <field name="domain">[('partner_type','=','supplier')]</field>
            <field name="context">{

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="as_sale_coupon_program_view_promo_program_form" model="ir.ui.view">
        <field name="name">as.sale.coupon.promotion.program.form</field>
        <field name="model">coupon.program</field>
        <field name="inherit_id" ref="sale_coupon.sale_coupon_program_view_promo_program_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='program_type']" position="after">
                <field name="as_price_list" />
                <field name="as_type" />
                <field name="PRICE_UNIT_USD"/>
                <field name="COST_NIMAX_USD"/>
                <field name="DISCOUNT_AMOUNT_USD"/>
                <field name="COSTO"/>
            </xpath>
<!--            <group name="validity" position="after">-->
<!--                <group name="promotion_compute" string="Promo Apply">-->
<!--                    <field name="PROMO_count"/>-->
<!--                    <field name="PROMO_countdown"/>-->
<!--                    <field name="PROMO_show"/>-->
<!--                </group>-->
<!--            </group>-->
            <group name="validity" position="after">
                <group name="gift" string="Gift">
                    <field name="tf_max_gifted_qty"/>
                    <field name="tf_gifted_qty"/>
                    <field name="tf_balance"/>
                </group>
            </group>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add action entry in the Action Menu for Partners -->
    <record id="as_partner_form_view" model="ir.ui.view">
        <field name="name">as.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="as_partner_type"/>
            </xpath>
            <page name="internal_notes" position="after">
                <page name="vendor_parameter" string="Vendor Paramter">
                    <field name="tf_vendor_parameter_ids">
                        <tree>
                            <field name="name"/>
                            <field name="partner_type"/>
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>

</odoo>
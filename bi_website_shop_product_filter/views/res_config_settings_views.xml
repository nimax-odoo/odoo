<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.auto.generate.lot.configuration
        </field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='proforma_configuration']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="quotation_expiration_days" />
                        <field name="quotation_expiration_days" />
                        <div class="text-muted">
                            Número de días antes de que una cotización caduque
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
